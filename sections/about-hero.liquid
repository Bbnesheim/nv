<section class="about-hero">
  {% if section.settings.image != blank %}
    <div class="about-hero__media">
      {{ section.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy', class: 'about-hero__image' }}
    </div>
  {% endif %}
  <div class="about-hero__content">
    {% if section.settings.kicker != blank %}
      <p class="about-hero__kicker">{{ section.settings.kicker }}</p>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h1 class="about-hero__heading">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <div class="about-hero__subheading">{{ section.settings.subheading }}</div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "About hero",
  "tag": "section",
  "class": "section about-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Built on curiosity"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Learn more about how we started, what we believe in, and the people behind the brand.</p>"
    }
  ],
  "presets": [
    {
      "name": "About hero"
    }
  ]
}
{% endschema %}
