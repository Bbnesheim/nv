{% comment %}
  Sticky Slides Section
  GOALS:
  1. Fullscreen sticky text + swapping background hero (2-column grid, sticky left, right swaps background).
  2. Top-right menu from link_list.
  3. Media guard: video > image > SVG placeholder (default 'lifestyle-1').
  4. Optional Dawn component CSS toggles.
  5. Schema: sticky_top, visual_aspect_ratio, menu, 4 booleans, slide block with title, body, cta_label, cta_url, image, video, placeholder, bg_color.
  6. BEM classes.
  7. No Liquid errors, all tags closed.
{% endcomment %}

{%- liquid
  assign sticky_top = section.settings.sticky_top | default: 80
feat/nv-sticky-slides
  assign aspect_ratio = section.settings.visual_aspect_ratio | default: '16/9'
  assign aspect_ratio_value = aspect_ratio | replace: '/', ' / '
  assign menu = section.settings.menu
  assign load_list_menu = section.settings.load_list_menu
  assign load_search = section.settings.load_search
  assign load_menu_drawer = section.settings.load_menu_drawer
  assign load_cart_notification = section.settings.load_cart_notification
-%}

{%- if load_list_menu -%}
  <link rel="stylesheet" href="{{ 'component-list-menu.css' | asset_url }}">
{%- endif -%}
{%- if load_search -%}
  <link rel="stylesheet" href="{{ 'component-search.css' | asset_url }}">
{%- endif -%}
{%- if load_menu_drawer -%}
  <link rel="stylesheet" href="{{ 'component-menu-drawer.css' | asset_url }}">
{%- endif -%}
{%- if load_cart_notification -%}
  <link rel="stylesheet" href="{{ 'component-cart-notification.css' | asset_url }}">
{%- endif -%}
  assign aspect_ratio_setting = section.settings.visual_aspect_ratio | default: '16/9'
  assign aspect_ratio_value = aspect_ratio_setting | replace: '/', ' / '
  assign first_block = section.blocks | first
  assign first_video = ''
  assign first_image = null
  assign first_bg = ''
  if first_block
    assign first_video = first_block.settings.video | strip
    assign first_image = first_block.settings.image
    if first_image == blank and first_block.settings.mobile_image != blank
      assign first_image = first_block.settings.mobile_image
    endif
    assign first_bg_setting = first_block.settings.bg_color
    if first_bg_setting != blank and first_bg_setting.alpha > 0
      assign first_bg = first_bg_setting
    endif
  endif
%}


{% if section.settings.load_list_menu_css %}
  <link rel="stylesheet" href="{{ 'component-list-menu.css' | asset_url }}" media="print" onload="this.media='all'">
{% endif %}
{% if section.settings.load_search_css %}
  <link rel="stylesheet" href="{{ 'component-search.css' | asset_url }}" media="print" onload="this.media='all'">
{% endif %}
{% if section.settings.load_menu_drawer_css %}
  <link rel="stylesheet" href="{{ 'component-menu-drawer.css' | asset_url }}" media="print" onload="this.media='all'">
{% endif %}
{% if section.settings.load_cart_notification_css %}
  <link rel="stylesheet" href="{{ 'component-cart-notification.css' | asset_url }}" media="print" onload="this.media='all'">
{% endif %}

{{ 'nv-sticky.css' | asset_url | stylesheet_tag }}
<script src="{{ 'nv-sticky.js' | asset_url }}" defer></script>
<section
  class="nv-sticky-slides"
  data-section-id="{{ section.id }}"
feat/nv-sticky-slides
  style="--sticky-top: {{ sticky_top }}px; --visual-aspect-ratio: {{ aspect_ratio_value }};"
>
  {%- if menu != blank and linklists[menu] and linklists[menu].links.size > 0 -%}
    <nav class="nv-ss__menu" aria-label="Section menu">
      <ul class="nv-ss__menu-list">
        {%- for link in linklists[menu].links -%}
          <li>
            <a href="{{ link.url | escape }}" {% if link.current %}aria-current="page"{% endif %}>{{ link.title | escape }}</a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>
  {%- endif -%}

  <div class="nv-sticky-slides__layout">
    <div class="nv-sticky-slides__copy">
      {%- for block in section.blocks -%}
        <article
          class="nv-sticky-slides__item{% if forloop.first %} is-active{% endif %}"
          id="slide-{{ forloop.index }}"
          data-sticky-item
          {{ block.shopify_attributes }}
        >
          <div class="nv-sticky-slides__text">
            {%- if block.settings.title != blank -%}
              <h2>{{ block.settings.title | escape }}</h2>
            {%- endif -%}
            {%- if block.settings.body != blank -%}
              <div class="rte">{{ block.settings.body }}</div>
            {%- endif -%}
            {%- if block.settings.cta_label and block.settings.cta_url -%}
              <a class="nv-sticky-slides__cta" href="{{ block.settings.cta_url | escape }}">{{ block.settings.cta_label | escape }}</a>
            {%- endif -%}
          </div>
        </article>
      {%- endfor -%}
    </div>
    <div class="nv-sticky-slides__visuals">
      {%- for block in section.blocks -%}
        <div
          class="nv-sticky-slides__visual{% if forloop.first %} is-visible{% endif %}"
          data-sticky-visual
          data-index="{{ forloop.index0 }}"
          {% if block.settings.bg_color != blank %}style="background: {{ block.settings.bg_color }};"{% endif %}
        >
          {%- if block.settings.video != blank -%}
            {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, controls: false, preload: "metadata" }}
          {%- elsif block.settings.video_url != blank -%}
            {# Optionally handle video_url here, or skip to image fallback #}
          {%- elsif block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: 2880 | image_tag: loading: 'eager', decoding: 'async', alt: block.settings.title }}
          {%- else -%}
            {{ block.settings.placeholder | default: 'lifestyle-1' | placeholder_svg_tag: 'nv-sticky-slides__placeholder-svg' }}
          {%- endif -%}
        </div>
      {%- endfor -%}
  style="--sticky-top: {{ sticky_top }}px; --visual-aspect-ratio: {{ aspect_ratio_value }};">
  <div class="nv-sticky-slides__layout">
    <div class="nv-sticky-slides__copy">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% liquid
            assign slide_video = block.settings.video | strip
            assign slide_bg = ''
            if block.settings.bg_color != blank and block.settings.bg_color.alpha > 0
              assign slide_bg = block.settings.bg_color
            endif
          %}
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 2400 }}"
              loading="lazy"
              decoding="async"
              alt="{{ block.settings.title | escape }}"
              data-slide-image="true"
              class="nv-sticky-slides__preload-image"
              aria-hidden="true">
          {% elsif block.settings.mobile_image != blank %}
            <img
              src="{{ block.settings.mobile_image | image_url: width: 1600 }}"
              loading="lazy"
              decoding="async"
              alt="{{ block.settings.title | escape }}"
              data-slide-image="true"
              class="nv-sticky-slides__preload-image"
              aria-hidden="true">
          {% endif %}
          <article
            class="nv-sticky-slides__item{% if forloop.first %} is-active{% endif %}"
            id="slide-{{ forloop.index }}"
            data-sticky-item
            data-block-id="{{ block.id }}"
            data-video="{{ slide_video | escape }}"
            data-bg="{{ slide_bg | escape }}"
            {% if block.settings.mobile_image != blank %} data-mobile-src="{{ block.settings.mobile_image | image_url: width: 1600 }}"{% endif %}
            {{ block.shopify_attributes }}
          >
            <div class="nv-sticky-slides__text">
              {% if block.settings.title != blank %}
                <h3 class="nv-sticky-slides__title">{{ block.settings.title | escape }}</h3>
              {% endif %}
              {% if block.settings.body != blank %}
                <div class="nv-sticky-slides__body rte">{{ block.settings.body }}</div>
              {% endif %}
              {% if block.settings.cta_label != blank and block.settings.cta_link != blank %}
                <a href="{{ block.settings.cta_link }}" class="button nv-sticky-slides__cta">{{ block.settings.cta_label | escape }}</a>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      {% else %}
        {% capture placeholder_json %}[
          {"title":"Lifestyle highlight","body":"Use this space to share your brand story.","placeholder":"lifestyle-1"},
          {"title":"Product focus","body":"Highlight key features or collections.","placeholder":"product-1"},
          {"title":"Collection spotlight","body":"Link to curated assortments for customers.","placeholder":"collection-1"}
        ]{% endcapture %}
        {% assign placeholder_slides = placeholder_json | parse_json %}
        {% for slide in placeholder_slides %}
          <article
            class="nv-sticky-slides__item{% if forloop.first %} is-active{% endif %}"
            id="slide-{{ forloop.index }}"
            data-sticky-item
            data-block-id="placeholder-{{ forloop.index }}"
            data-video=""
            data-bg=""
          >
            <div class="nv-sticky-slides__text">
              <h3 class="nv-sticky-slides__title">{{ slide.title }}</h3>
              <div class="nv-sticky-slides__body rte"><p>{{ slide.body }}</p></div>
              {%- assign ph = slide.placeholder | default: 'lifestyle-1' -%}
              {{ ph | placeholder_svg_tag: 'nv-sticky-slides__placeholder-svg' }}
              <a href="#" class="button nv-sticky-slides__cta">Learn more</a>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>
    <div class="nv-sticky-slides__visual"{% if first_bg != blank %} style="background-color: {{ first_bg | escape }};"{% endif %}>
      <div class="nv-sticky-slides__visual-media" aria-hidden="true">
        {% if first_block %}
          {% if first_video != blank %}
            <video src="{{ first_video | escape }}" playsinline muted loop preload="metadata"></video>
          {% elsif first_image %}
            {{ first_image | image_url: width: 2400 | image_tag:
              loading: 'eager',
              decoding: 'async',
              alt: first_block.settings.title | escape
            }}
          {% endif %}
        {% else %}
          <div class="nv-sticky-slides__placeholder-media">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sticky slides",
  "tag": "section",
  "class": "section",
  "enabled_on": { "templates": ["*"] },
  "settings": [
    {
      "type": "range",
      "id": "sticky_top",
      "label": "Sticky offset (px)",
      "min": 0,
      "max": 200,
      "step": 1,
      "default": 80
    },
    {
      "type": "select",
      "id": "visual_aspect_ratio",
      "label": "Visual aspect ratio",
      "options": [
        { "value": "16/9", "label": "16:9" },
        { "value": "4/3", "label": "4:3" },
        { "value": "1/1", "label": "1:1" },
        { "value": "21/9", "label": "21:9" }
      ],
      "default": "16/9"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Top-right menu"
    },
    {
      "type": "checkbox",
      "id": "load_list_menu",
      "label": "Load Dawn list menu CSS",
      "type": "checkbox",
      "id": "load_list_menu_css",
      "label": "Load list-menu styles",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "load_search",
      "label": "Load Dawn search CSS",
      "id": "load_search_css",
      "label": "Load search styles",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "load_menu_drawer",
      "label": "Load Dawn menu drawer CSS",
      "id": "load_menu_drawer_css",
      "label": "Load menu drawer styles",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "load_cart_notification",
      "label": "Load Dawn cart notification CSS",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "body",
          "label": "Body"
        },
        {
          "type": "text",
          "id": "cta_label",
          "label": "CTA label"
        },
        {
          "type": "url",
          "id": "cta_url",
          "label": "CTA URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile image"
        },
        {
          "type": "url",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "text",
          "id": "placeholder",
          "label": "SVG placeholder (Shopify name, e.g. 'lifestyle-1')"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color"
        },
        {
          "type": "text",
          "id": "cta_label",
          "label": "CTA label"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sticky slides",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
