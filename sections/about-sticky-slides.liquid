{% liquid
  assign has_slides = section.blocks.size > 0
%}

{{ 'about.css' | asset_url | stylesheet_tag }}

<section class="about-sticky-slides" data-section-id="{{ section.id }}" data-section-type="about-sticky-slides">
  <div class="about-sticky-slides__inner" data-about-sticky-slides>
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <header class="about-sticky-slides__header">
        {% if section.settings.subheading != blank %}
          <p class="about-sticky-slides__eyebrow">{{ section.settings.subheading }}</p>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="about-sticky-slides__heading">{{ section.settings.heading }}</h2>
        {% endif %}
      </header>
    {% endif %}

    {% if has_slides %}
      <div class="about-sticky-slides__layout">
        <div class="about-sticky-slides__list" data-slide-list>
          {% for block in section.blocks %}
            {% liquid
              assign slide_image = block.settings.image
              assign slide_bg = block.settings.background
              assign slide_video = block.settings.video
              assign video_source = nil

              if slide_video != blank
                assign mp4_source = nil
                for source in slide_video.sources
                  if source.mime_type contains 'mp4'
                    assign mp4_source = source
                    break
                  endif
                endfor

                if mp4_source
                  assign video_source = mp4_source.url
                elsif slide_video.sources != blank
                  assign first_source = slide_video.sources | first
                  if first_source
                    assign video_source = first_source.url
                  endif
                endif
              endif
            %}
            <article
              class="about-sticky-slides__item"
              data-slide-item
              {% if video_source %}data-video="{{ video_source | escape }}"{% endif %}
              {% if slide_bg %}data-bg="{{ slide_bg }}"{% endif %}
              {{ block.shopify_attributes }}
            >
              {% if slide_image %}
                <img
                  hidden
                  data-slide-image
                  srcset="{{ slide_image | image_url: width: 400 }} 400w, {{ slide_image | image_url: width: 800 }} 800w, {{ slide_image | image_url: width: 1200 }} 1200w"
                  sizes="(min-width: 1200px) 600px, (min-width: 768px) 50vw, 100vw"
                  src="{{ slide_image | image_url: width: 800 }}"
                  alt="{{ slide_image.alt | escape }}"
                  loading="lazy"
                  width="{{ slide_image.width }}"
                  height="{{ slide_image.height }}"
                >
              {% endif %}

              {% if block.settings.heading != blank %}
                <h3 class="about-sticky-slides__item-heading">{{ block.settings.heading }}</h3>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="about-sticky-slides__item-text">{{ block.settings.text }}</div>
              {% endif %}
            </article>
          {% endfor %}
        </div>

        <div class="about-sticky-slides__visual" data-slide-visual>
          <div class="about-sticky-slides__visual-media" data-slide-media></div>
        </div>
      </div>
    {% endif %}
  </div>
  {{ 'about-sticky.js' | asset_url | script_tag }}
</section>

{% schema %}
{
  "name": "About sticky slides",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Eyebrow"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our story"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Slide title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Body",
          "default": "<p>Share the key moment in your journey here.</p>"
        },
        {
          "type": "color",
          "id": "background",
          "label": "Background color"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About sticky slides",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
